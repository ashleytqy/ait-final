<h1>{{title}}</h1>
<a href="/{{slug}}/create">submit a poem</a>
<div>
    {{#each poems as |poem|}}
    <article class="draggable mw5 mw6-ns hidden ba mv4">
      <div class="pa3">
        <p class="f6 f5-ns lh-copy measure mv0">
            {{{poem.body}}}
        </p>
      </div>
		<h1 class="f4 bg-near-black white mv0 pv2 ph3">by {{poem.username}} / {{poem.likes}} likes</h1>
		<a href="{{../slug}}/{{poem._id}}/delete">delete this poem</a>
		<a href="{{../slug}}/{{poem._id}}/edit">edit this poem</a>
    </article>
{{/each}}
